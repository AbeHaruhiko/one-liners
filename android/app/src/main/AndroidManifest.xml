<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.caliconography.one_liners">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="jp.caliconography.one_liners.App">
    <activity
            android:name=".activities.BookListActivity"
            android:label="@string/app_name">
        <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.BookDetailActivity"
            android:label="@string/title_book_detail"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.BookListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".bookListActivity" />
        </activity>
        <activity
            android:name=".activities.PhotoDetailActivity"
            android:label="@string/title_photo_detail"
            android:parentActivityName=".activities.BookDetailActivity">
        <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".BookDetailActivity" />
        </activity>
        <activity
            android:name=".activities.BookSearchResultListActivity"
            android:label="@string/title_book_detail"
            android:parentActivityName=".activities.BookDetailActivity">
        <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".BookDetailActivity" />
        </activity>
    </application>

</manifest>
