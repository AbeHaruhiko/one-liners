<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.parse.ParseImageView
        android:id="@+id/card_thumbnail_image"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/carddemo_staggered_inner_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/card_thumbnail_image"
        android:paddingLeft="3dip"
        android:paddingRight="3dip" />

    <TextView
        android:id="@+id/favorite_meal_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/carddemo_staggered_inner_title"
        android:layout_toRightOf="@+id/carddemo_staggered_inner_title"
        android:paddingLeft="3dip"
        android:paddingRight="3dip" />

</RelativeLayout>